<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#1e829f"/>
            <stroke
                android:width="0dp" />
            <corners
                android:radius="5dp"/>
            <padding
                android:left="@dimen/topbar_button_padding"
                android:top="@dimen/topbar_button_padding"
                android:right="@dimen/topbar_button_padding"
                android:bottom="@dimen/topbar_button_padding"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#2ab4db" />
            <stroke
                android:width="0dp" />
            <corners
                android:radius="5dp"/>
            <padding android:left="@dimen/topbar_button_padding"
                android:top="@dimen/topbar_button_padding"
                android:right="@dimen/topbar_button_padding"
                android:bottom="@dimen/topbar_button_padding"/>
        </shape>
    </item>
</selector>