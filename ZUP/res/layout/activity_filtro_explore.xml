<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3" >

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/filtros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/filtros"
            android:textColor="#000"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@+id/botaoConcluido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_blue_bg"
            android:text="@string/concluido"
            android:textColor="#fff" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/info_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar"
        android:background="#e6e6e6"
        android:padding="10dp" >

        <TextView
            android:id="@+id/instrucoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/exibir_solicitacoes_de"
            android:textAllCaps="true"
            android:textColor="#999"
            android:textSize="@dimen/instruction_text_size" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/info_label" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/seletor_tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:padding="35dp"
                android:weightSum="2" >

                <TextView
                    android:id="@+id/opcaoBocaDeLobo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/icon_boca_lobo"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:text="@string/limpeza_de_boca_de_lobo"
                    android:textColor="@color/icon_text_color" />

                <TextView
                    android:id="@+id/opcaoColetaEntulho"
                    android:layout_width="0dp"
                    android:drawablePadding="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/icon_coleta_entulho"
                    android:gravity="center"
                    android:text="@string/coleta_de_entulho"
                    android:textColor="@color/icon_text_color" />
            </LinearLayout>

            <View
                android:id="@+id/separator1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/seletor_tipo"
                android:background="#ccc" />

            <br.com.ntxdev.zup.widget.SeekbarWithIntervals
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator1"
                android:padding="20dp" />

            <View
                android:id="@+id/separator2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/seekBar"
                android:background="#ccc" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator2"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:drawablePadding="15dp"
                android:drawableRight="@drawable/seta_expandir"
                android:padding="25dp"
                android:text="@string/todos_os_status"
                android:textSize="@dimen/navigation_text_size" />

            <View
                android:id="@+id/separator3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/status"
                android:background="#ccc" />

            <LinearLayout
                android:id="@+id/opcoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator3"
                android:background="#fff"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/todosStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:padding="15dp"
                    android:text="@string/todos_os_status"
                    android:textColor="#2ab4dc"
                    android:textSize="@dimen/navigation_text_size" />

                <TextView
                    android:id="@+id/resolvidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:padding="15dp"
                    android:text="@string/resolvidos"
                    android:textColor="@color/text_option_color"
                    android:textSize="@dimen/navigation_text_size" />

                <TextView
                    android:id="@+id/emAndamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:padding="15dp"
                    android:text="@string/em_andamento"
                    android:textColor="@color/text_option_color"
                    android:textSize="@dimen/navigation_text_size" />

                <TextView
                    android:id="@+id/emAberto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:padding="15dp"
                    android:text="@string/em_aberto"
                    android:textColor="@color/text_option_color"
                    android:textSize="@dimen/navigation_text_size" />

                <TextView
                    android:id="@+id/naoResolvidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:clickable="true"
                    android:padding="15dp"
                    android:text="@string/nao_resolvidos"
                    android:textColor="@color/text_option_color"
                    android:textSize="@dimen/navigation_text_size" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/separatorBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/opcoes"
                android:background="#e6e6e6"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/exibir_pontos_de"
                    android:textAllCaps="true"
                    android:textColor="#999"
                    android:textSize="@dimen/instruction_text_size" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/separatorBar"
                android:background="#f3f3f3"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="35dp"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/opcaoFlorestaUrbana"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/icon_floresta_urbana"
                    android:gravity="center"
                    android:text="@string/floresta_urbana"
                    android:textColor="@color/icon_text_color" />

                <TextView
                    android:id="@+id/opcaoPracasWifi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/icon_praca_wifi"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:text="@string/pracas_com_wifi"
                    android:textColor="@color/icon_text_color" />

                <TextView
                    android:id="@+id/opcaoBocasDeLoboLocal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawablePadding="10dp"
                    android:drawableTop="@drawable/icon_boca_lobo"
                    android:gravity="center"
                    android:text="@string/bocas_de_lobo"
                    android:textColor="@color/icon_text_color" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>